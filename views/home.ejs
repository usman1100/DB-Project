<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="bootstrap.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= username %> </title>
</head>
<body>

    <div class="jumbotron bg-dark text-light">
        <h1 class="display-1">Welcome <%= username %> </h1>

        <button class="btn btn-light"><a href="/logout">
            Logout
        </a></button>

        <button class="btn btn-light"><a href="/create_post">
            Create new post
        </a></button>

        <button class="btn btn-light"><a href="/search">
            Search
        </a></button>

    </div>

    

    <!-- Posts -->



    <div class="container-fluid my-4">

        <h1 class="display-5 my-5 underline">Your recent posts</h1>


        <% if (posts.length == 0) { %>
            <h1>You have not posted anything yet</h1>
            <p>Click here to <a href="/post">post</a></p>
        <% } %>
       
       <% posts.forEach(post => { %>
           
        <div class="container-fluid my-5 border p-3">

            <h3>
                <%= post.title %>
            </h3>

            <p><%= post.body %> </p>

        </div>
        <% }) %>

    </div>

</body>
</html>